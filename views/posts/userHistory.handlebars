

<link rel="stylesheet" type="text/css" href="/public/css/userOrderHistory.css">




<!-- Shoping Cart Section Begin -->
<div class="bootstrap-iso">
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                        <tr>
                            <th class="shoping__product">Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each user.order}} 
                            <tr>
                                <td class="shoping__cart__item">
                                    
                                    <p>{{this.time}}</p>
                                    <img src="/{{this.image}}"  style="width: 128px; height: auto">
                                    <h5>{{this.name}}</h5>
                   
                                </td>
                                <td class="shoping__cart__price">
                                    ${{this.price}}
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        {{this.quantity}}
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    ${{this.total}}
                                </td>
                                <td class="shoping__cart__item__close">
                                    <span class="icon_close"></span>
                                </td>
                            </tr>
                        {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>
</div>
<!-- Shoping Cart Section End -->


