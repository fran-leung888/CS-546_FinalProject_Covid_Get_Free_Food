    function generateUrlWithParams(url, params) {
        var urlParams = [];
        for (var key in params) {
            if (params[key]) {
                urlParams.push(`${key}=${params[key]}`)
            }
        }
        url += '?' + urlParams.join('&');
        return url
    };

