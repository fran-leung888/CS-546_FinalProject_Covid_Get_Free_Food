    <div class="container-fluid vh-75" >
        <div class="" style="margin-top:5% ">
            <div class="rounded d-flex justify-content-center">
                <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">

                    <div class="text-center">
                        <h3 class="text-primary">Create Merchant Account</h3>
                    </div>
                    <div class="p-4" style="margin-bottom: 5%">
                        <form method="post" action="/signup/merchant" enctype="multipart/form-data">


                            <img width="100%"  id="viewImg" >

                            <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary"><i
